@model List<InvoiceModel>
    @{
        int Page = (int)ViewBag.Page;

    }

    <table class="table table-striped table-hover" id="datatable" style="min-width:1800px;">
        <thead>
            <form action="@Url.Action("SearchApproved")" method="post">
                <tr>

                    <th>
                        <input type="text" class="form-control" id="srcInvoice" name="InvoiceNo" placeholder="Invoice No">
                    </th>
                    <th>
                        @*<input type="text" class="form-control" id="srcStartDate" name="StartDate" placeholder="Başlangıç Tarihi">
                            <input type="text" class="form-control" id="srcFinalDate" name="FinalDate" placeholder="Bitiş Tarihi">*@
                    </th>
                    <th>
                        <input type="text" class="form-control" id="srcCCode" name="CCode" placeholder="Current Account No">
                    </th>
                    <th>
                        <input type="text" class="form-control" id="srcCName" name="CName" placeholder="Current Account Name">
                    </th>
                    <th>
                    </th>
                    <th>
                        <button class="btn btn-sm green" type="submit" id="search">Search</button>
                    </th>
                    <th>
                        
                    </th>
                </tr>
            </form>
            <tr>
                <th>
                    Invoice No
                </th>
                <th>
                    Invoice Date
                </th>
                <th>
                    Account No
                </th>
                <th>
                    Account Name
                </th>
                <th>
                    Amount (TL)
                </th>
                <th>
                    Currency 
                </th>
                <th>
                    Sender 
                </th>
                <th>
                    Sending Date
                </th>
                <th>
                    Status 1
                </th>
                <th>
                    Approver/Decliner Man. 1 
                </th>
                <th>
                    Approve/Decline Date 1
                </th>
                <th>
                    Status 2
                </th>
                <th>
                    Approver/Decliner Man. 2 
                </th>
                <th>
                    Approve/Decline Date 2
                </th>
                <th>
                    Status G.M.
                </th>
                <th>
                    Approver/Decliner G.M.
                </th>
                <th>
                    G.M. Approve/Decline Date 
                </th>
                
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.FICHENO
                    </td>
                    <td>
                        @item.DATE_
                    </td>
                    <td>
                        @item.CLCODE
                    </td>
                    <td>
                        @item.CLNAME
                    </td>
                    <td>
                        @item.TOTAL.ToString("n2")
                    </td>
                    <td>
                        @item.CURTOTAL.ToString("n2") @item.CURNAME
                    </td>
                    <td>
                        @item.ONAYAGONDEREN
                    </td>
                    <td>
                        @item.ONAYAGONDERMETARIHI.ToString("dd.MM.yyyy HH:mm:ss")
                    </td>
                    <td>
                        @(!item.ONAY1.HasValue ? "" : item.ONAY1.Value ? "Approved" : "Rejected")
                    </td>
                    <td>
                        @item.ONAYLAYAN1
                    </td>
                    <td>
                        @item.ONAYTARIHI1
                    </td>
                    <td>
                        @(!item.ONAY2.HasValue ? "" : item.ONAY2.Value ? "Approved" : "Rejected")
                    </td>
                    <td>
                        @item.ONAYLAYAN2
                    </td>
                    <td>
                        @item.ONAYTARIHI2
                    </td>
                    <td>
                        @(!item.ONAY3.HasValue ? "" : item.ONAY3.Value ? "Approved" : "Rejected")
                    </td>
                    <td>
                        @item.ONAYLAYAN3
                    </td>
                    <td>
                        @item.ONAYTARIHI3
                    </td>
                </tr>
            }

        </tbody>
    </table>
               @Html.MyPaging(Page, null, null, "_ApprovedList", "Invoice")